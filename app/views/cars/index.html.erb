<h1>Cars#index</h1>
<p>Find me in app/views/cars/index.html.erb</p>

<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-3">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <h1 class="text-light"> <%= car.title %></h1>
            <p class="text-light"><%= car.brand %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
