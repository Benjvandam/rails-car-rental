<div class="container">
  <div class="row justify-content-center">
    <% @cars.each do |car| %>
      <div class="col-3 m-4">
        <div class="card soft-edges" style="width: 18rem;">
          <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% car.photos.each_with_index do |photo, index| %>
                <% if index == 0 %>
                  <div class="carousel-item active">
                    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
                  </div>
                <% else %>
                  <div class="carousel-item">
                    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="card-body rounded-4">
            <h5 class="card-text"><%= "#{car.brand} #{car.model}" %></h5>
            <p class="card-text"><%= car.description %></p>
    <%= link_to "Check this Car", car_path(car, photos: car.photos.map(&:url)) %>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"> <%= "#{car.year}" %></li>
              <li class="list-group-item"> <%= "$ #{car.price.floor}/Day" %></li>
              <li class="list-group-item"> <%= "#{Car.review_avarage(car)}" %></li>
            </ul>
            <%= link_to "Check this Car", car_path(car), class: "btn btn-primary" %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
