<div class="container">
  <div class="d-flex justify-content-between">
  <h1>All Avaiable Cars</h1>
<p>Find me in app/views/cars/index.html.erb</p>
<% cl_image_tag("https://res.cloudinary.com/dnvzgtwcu/image/upload/v1693254847/nuqd75myrokroyzkeqwf.jpg",
      width: 400, height: 300, crop: :fill) %>

<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-3">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path car.photo.key, height: 300, crop: :fill %>'); background-size: cover">
          <h1 class="text-light"> <%= link_to car.title, car_path(car) %></h1>
            <p class="text-light"><%= car.brand %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
