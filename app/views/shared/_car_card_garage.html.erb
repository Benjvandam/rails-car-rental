<div class="col-6 m-2"></div>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= car.photos.first %>)">
    <p><%= "#{car.model}" %></p>
  </div>

  <div class='m-2'>
    <%= link_to "Edit Car", edit_car_path(car) %>
    <%= link_to "Remove car", car_path(car), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger" %>
  </div>
</div>
